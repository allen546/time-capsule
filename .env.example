# Time Capsule Environment Configuration Example
# Copy this file to .env and modify as needed

# Environment
TIME_CAPSULE_ENV=dev  # Options: dev, prod, test

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database configuration
DB_DRIVER=sqlite+aiosqlite
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=timecapsule

# API keys
DEEPSEEK_API_KEY=
OPENAI_API_KEY=

# Security
JWT_SECRET=
ADMIN_PASSWORD=
ENCRYPTION_KEY=

# Feature flags
ENABLE_CHAT=true
ENABLE_DIARY=true

# Logging
LOG_LEVEL=INFO 